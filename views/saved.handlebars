<!-- nav bar -->

    <nav class="navbar navbar-custom">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Saved Articles</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#">Saved Article</a></li>
            </ul>
            <!-- <button id="btn" class="btn btn-danger navbar-btn">SCRAPE NEW ARTICLE!</button> -->
        </div>
    </nav>

<!-- main content -->

    <!-- image -->
    <div class="container-fluid thumbnail">
        <img src="NYT picture.jpg" alt="Lights" class="img-background"width="100%">
        <div class="centered">
            <h1>SAVED ARTICLES</h1>
            <h3>YOUR SAVED ARTICLES</h3>
        </div>
    </div>

    <!-- Article panel -->
    <div class="article">
        {{#each result}}
            {{#if saved}}
                <div class="panel panel-primary articles" id = "{{id}}">
                    <div class="panel-heading">{{title}}
                        
                        <button type="button" class="btn btn-danger" data-attr = "{{id}}">DELETE FROM NOTE</button>
                        <button type="button" class="btn btn-default" data-attr = "{{id}}" data-toggle="modal" data-target="#myModal">ARTICLE NOTE</button>
                    </div>
                    <div class="panel-body">{{body}}</div>
                </div>
            {{/if}}
        {{/each}}
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <p>You have added 20 Articles</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

