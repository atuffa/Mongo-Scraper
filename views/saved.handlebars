<!-- nav bar -->

    <nav class="navbar navbar-custom">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Saved Articles</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/saved">Saved Article</a></li>
            </ul>
            <!-- <button id="btn" class="btn btn-danger navbar-btn">SCRAPE NEW ARTICLE!</button> -->
        </div>
    </nav>

<!-- main content -->

    <!-- image -->
    <div class="container-fluid thumbnail">
        <img src="NYT picture.jpg" alt="Lights" class="img-background"width="100%">
        <div class="centered">
            <h1>SAVED ARTICLES</h1>
            <h3>YOUR SAVED ARTICLES</h3>
        </div>
    </div>
    {{#each result}}
    <!-- Article panel -->
    <div class="article">
        <div>{{result}}</div>
                <div class="panel panel-primary articles" >
                    <div class="panel-heading">
                        <div class="row">
                            <p class="col-md-8">{{title}}</p>
                            <button type="button" class="btn btn-default col-md-1" data-id = "{{id}}" data-toggle="modal" data-target="#{{id}}">ARTICLE NOTE</button>
                            <button id="deleteFromNote" type="button" class="btn btn-danger col-md-2" style="margin-right: 10px" data-id = "{{id}}">DELETE FROM Saved</button>
                        </div>
                    </div>
                    
                    <div class="panel-body">{{content}}</div>
                </div>
    </div>
   

    <!-- Modal -->
    <div class="modal fade" id="{{id}}" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Note for Article: {{id}}</h4>
                </div>
   
                <div class="modal-body">
                    <div class="input-group">

                        <li id="note" class="form-control" style=" width: 556px">
                            <div id="note" class="row ">
                                <p id="renderedNote"class="col-md-9">{{note.body}}</p>
                               
                                <span>
                                    <button id="deleteNote" type="button" data-id = {{id}} class="btn btn-danger btn-sm col-md-2">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button>
                                </span>
                            </div>
                        </li>
                     
                        <li id="noArticle" class="form-control">
                            No note for this article yet
                        </li>
                        <form>
                            <div class="form-group" >
                                <input class="form-control" rows="5" id="inputBody" placeholder="New Note" style="margin-top:20px">

                                </input>
                            </div>
                        </form>
                    </div>

                </div>

                <div class="modal-footer">
                    <button id="addNote" type="button" class="btn btn-primary" data-dismiss="modal"  data-id = "{{id}}">Save Note</button>
                </div>
                
            </div>
        </div>
    </div>
    {{/each}}
